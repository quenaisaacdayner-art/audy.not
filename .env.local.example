# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Telegram Bot Configuration
# Create a bot via @BotFather in Telegram: /newbot
# Copy the token provided after creation
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# The username shown by BotFather (without the @ symbol)
TELEGRAM_BOT_USERNAME=your_bot_username_without_at

# Reddit Monitoring (ScrapeCreators fallback)
# Optional: Only needed if Reddit blocks cloud IPs (403/429)
# Sign up at https://app.scrapecreators.com to get a free API key (100 requests)
# Paid: $47 for 25,000 credits (credits never expire)
SCRAPECREATORS_API_KEY=your_scrapecreators_api_key
